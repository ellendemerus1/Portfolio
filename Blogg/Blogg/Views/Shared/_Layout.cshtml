@model Blogg.ViewModels.ListViewModel

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<DOCTYPE Html!>
    <html>
    <head>
        <link href="~/css/StyleSheet.css" rel="stylesheet" />
        <script src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.2.1.min.js"></script>
        <script src="https://cdn.jsdelivr.net/jquery.ajax.unobtrusive/3.2.4/jquery.unobtrusive-ajax.min.js"></script>
        <script src="~/JS/JavaScript.js" defer></script>
    </head>
    <body>
        <header>
            <h1>SPRÅKBLOGGEN</h1>
            <nav>
                <ul>
                    <li>
                        <a asp-controller="Home" asp-action="ListView">Alla inlägg</a>
                    </li>
                    @foreach (var cat in Model.Categories)
                    {
                        <li>
                            <a asp-controller="Search" asp-action="SearchOnCategory" asp-route-id=@cat.CategoryId>@cat.CategoryName</a>
                        </li>
                    }

                    <li style="float:right">
                        <form id="SearchForm" asp-controller="Search" asp-action="SearchedListView" method="post">
                            <input type="text" asp-for="SearchValue" />

                            <input type="submit" value="Sök" />
                        </form>
                    </li>

                    <li style="float:right">
                        <a asp-controller="Create" asp-action="CreatePost">Skapa inlägg</a>
                    </li>
                </ul>
            </nav>

        </header>
        <div class="container">
            @RenderBody()
        </div>

    </body>


</html>
</DOCTYPE>
