@model Blogg.ViewModels.ListViewModel

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<script src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.2.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/jquery.ajax.unobtrusive/3.2.4/jquery.unobtrusive-ajax.min.js"></script>

<div id="searchResult">
    <div class="listOfPosts">

        @foreach (var post in Model.Posts)

        {
            <a asp-controller="Home" asp-action="PostDetails"
               asp-route-id=@post.PostId
               data-ajax="true"
               data-ajax-method="GET"
               data-ajax-mode="replace"
               data-ajax-update="#postDetails">
                @post.Header  @post.Time.ToString("MM/dd/yyyy HH:mm") >>
            </a>
            <br /> <br />
        }

        </div>

    </div>

<div id="postDetails"></div>